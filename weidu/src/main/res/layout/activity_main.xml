<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".activity.MainActivity">

    <EditText
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="40dp"

        android:drawableLeft="@drawable/login_icon_phone_n_xxhdpi"
        android:layout_marginTop="160dp"
        android:layout_marginRight="36dp"
        android:layout_marginLeft="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="            手机号"
        android:background="@android:color/transparent"
        android:textSize="18sp"
        android:textColorHint="#ffffff"
        />
     <View
         android:layout_marginRight="36dp"
         android:layout_marginLeft="36dp"
         app:layout_constraintTop_toBottomOf="@id/name"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         android:layout_width="0dp"
         android:layout_height="1dp"
         android:background="#fff"
         />


    <EditText
        android:id="@+id/pwd"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="36dp"
        android:layout_marginLeft="36dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/login_icon_lock_n_xxhdpi"
        android:drawableRight="@drawable/login_icon_eye_n_xxhdpi"
        app:layout_constraintTop_toTopOf="@+id/name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="            登录密码"
        android:textSize="18sp"
        android:textColorHint="#ffffff"
        />
    <View
        android:layout_marginRight="36dp"
        android:layout_marginLeft="36dp"
        app:layout_constraintTop_toBottomOf="@id/pwd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#fff"
        />
    <CheckBox
        android:id="@+id/cb_jz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pwd"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape2"
        />
    <TextView
        android:id="@+id/jzmm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pwd"
        app:layout_constraintLeft_toRightOf="@id/cb_jz"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="记住密码"
        android:textColor="#ffffff"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/log_resgin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pwd"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="36dp"
        android:text="快速注册"
        android:textColor="#ffffff"
        android:textSize="14sp"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="120dp"
        android:text="登录"
        android:textSize="18sp"
        android:textColor="#ff5f71"
        android:background="@drawable/shape1"
        />
</android.support.constraint.ConstraintLayout>
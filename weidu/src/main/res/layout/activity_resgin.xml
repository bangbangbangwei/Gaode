<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".activity.MainActivity">

    <EditText
        android:id="@+id/res_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/login_icon_phone_n_xxhdpi"
        android:layout_marginTop="160dp"
        android:layout_marginRight="36dp"
        android:layout_marginLeft="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="            手机号"
        android:textSize="18sp"
        android:textColorHint="#ffffff"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/res_pwd"
        android:background="#fff"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/res_yzm"
        android:background="#fff"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/res_name"
        android:background="#fff"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/res_yzm"
        app:layout_constraintRight_toRightOf="@id/res_yzm"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:text="获取验证码"
        />
    <EditText
        android:id="@+id/res_yzm"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="36dp"
        android:layout_marginLeft="36dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/resgin_lockxx"
        app:layout_constraintTop_toTopOf="@+id/res_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="            验证码"
        android:textSize="18sp"
        android:textColorHint="#ffffff"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="@id/res_pwd"
        app:layout_constraintTop_toTopOf="@id/res_pwd"
        android:src="@drawable/login_icon_eye_n_xxhdpi"
        />
    <EditText
        android:id="@+id/res_pwd"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="36dp"
        android:layout_marginLeft="36dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/login_icon_lock_n_xxhdpi"
        app:layout_constraintTop_toTopOf="@+id/res_yzm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="            登录密码"
        android:textSize="18sp"
        android:textColorHint="#ffffff"
        />

    <TextView
        android:id="@+id/log_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/res_pwd"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="36dp"
        android:text="已有账户?立即登录"
        android:textColor="#ffffff"
        android:textSize="14sp"/>
    <Button
        android:id="@+id/btn_resgin"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="120dp"
        android:text="注册"
        android:textSize="18sp"
        android:textColor="#ff5f71"
        android:background="@drawable/shape1"
        />
</android.support.constraint.ConstraintLayout>